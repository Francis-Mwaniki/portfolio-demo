---
import Card from '../components/Card.astro'
title: 'Projects'
description: 'A list of projects I have worked on'

const projects = [
  { title: 'Vue Projects', description: 'see all projects' },
  { title: 'Nuxt Projects', description: 'see all projects' },
  { title: 'Next.js Projects', description: 'see all projects' },
  { title: 'Astro Projects', description: 'see all projects' },
  { title: 'Node.js Project', description: 'see all projects' },
  { title: 'NestJS Project', description: 'see all projects' },

]
---
<main class="max-w-5xl mx-auto my-5 p-2">
    <div>
        <h2 class="text-2xl font-bold text-center  my-2">Projects</h2>
    </div>
<Card>
   
    <div >
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 max-w-5xl mx-auto ">
        {
            projects.map(project => (
                <div class="p-4 bg-white  cursor-pointer shadow-lg hover:shadow-md rounded-lg hover:shadow-black">
                    <h3 class="text-lg font-bold">{project.title}</h3>
                    <p class="text-gray-600">{project.description}</p>
                </div>
            ))
        }
        </div>
    </div>

   

</Card>
</main>

