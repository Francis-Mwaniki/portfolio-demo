---
import GridLayout from './Skill.astro'
const skills = ['vue', 'nuxtjs', 'nextjs', 'astrojs', 'tailwind', 'nodejs', 'nestjs', 'git','mongoDB','firebase']

---
<GridLayout>
    <h2 class="text-2xl my-6 font-bold">Skills</h2>
    <div class="grid sm:grid-cols-4 sm:gap-4  shadow-lg  bg-white  mx-auto p-4  gap-4 rounded grid-cols-2">
        
        {skills.map((skill) => (
           
        <div class="flex flex-row items-center  relative">
            <a href={`https://www.google.com/search?q=${skill}`} target="_blank"
                class=" text-gray-950 transition duration-300 ease-in-out group hover:text-gray-950"
                >
            <span class="text-sm bg-white shadow-sm shadow-black p-2 rounded-lg min-w-[140px] cursor-pointer  flex flex-row justify-center items-center mx-auto gap-2 hover:bg-gray-100 smooth-ring rolling-bg-gradient font-bold">{skill}
                
              
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 group-hover:scale-125 transform transition duration-300 ease-in-out">
  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
</svg>

                 
            </span>
           
               </a>
        </div>
        ))}
    </div>
</GridLayout>

<style>
    .rolling-color{
        animation: rolling 5s infinite;
    }
    @keyframes rolling {
        0%{
            color: #f59e0b;
        }
        25%{
            color: #10b981;
        }
        50%{
            color: #3b82f6;
        }
        75%{
            color: #ef4444;
        }
        100%{
            color: #f59e0b;
        }
    }
    .rolling-bg-gradient{
        background: linear-gradient(90deg, #f59e0b 0%, #10b981 25%, #3b82f6 50%, #ef4444 75%, #f59e0b 100%);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: rolling 5s infinite;
        transition: all 0.3s ease-in-out;

    }
    .rolling-bg-gradient:hover{
        transform: scale(1.1);
        box-shadow: 0 0 0 3px transparent;
        animation: rolling 5s infinite;
        transition: all 0.3s ease-in-out;

    }
    .rolling-bg-gradient:hover a{
        color: #f5690b;
    }
    .rolling-bg-gradient a{
        color: #f59e0b;
    }
    .rolling-bg-gradient a:hover{
        color: #f5690b;
    }
    .rolling-bg-gradient a:hover svg{
        stroke: #f5690b;
    }
    .rolling-bg-gradient svg{
        stroke: #f59e0b;
        transition: all 0.3s ease-in-out;
    }
    .rolling-bg-gradient svg:hover{
        stroke: #f5690b;
    }
    .rolling-bg-gradient:hover svg{
        stroke: #f5690b;
    }
    .rolling-bg-gradient:hover svg:hover{
        stroke: #f5690b;
    }
  


    .smooth-ring{
        transition: all 0.3s ease-in-out;
        animation: rolling 5s infinite;
    }
    .smooth-ring:hover{
        transform: scale(1.1);
        box-shadow: 0 0 0 3px transparent;
        animation: rolling 5s infinite;
    }

    @keyframes rolling {
        0%{
            color: #f59e0b;
        }
        25%{
            color: #10b981;
        }
        50%{
            color: #3b82f6;
        }
        75%{
            color: #ef4444;
        }
        100%{
            color: #f59e0b;
        }
    }


</style>