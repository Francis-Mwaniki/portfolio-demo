<style>
    .rolling-color{
        animation: rolling 5s infinite;
    }
    @keyframes rolling {
        0%{
            color: #f59e0b;
        }
        25%{
            color: #10b981;
        }
        50%{
            color: #3b82f6;
        }
        75%{
            color: #ef4444;
        }
        100%{
            color: #f59e0b;
        }
    }
    .rolling-bg-gradient{
        background: linear-gradient(90deg, #000000 0%, #535353 25%, #000000 50%, #000000 75%, #000000 100%);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: rolling 5s infinite;
        transition: all 0.3s ease-in-out;

    }
    .rolling-bg-gradient:hover{
        transform: scale(1.1);
        box-shadow: 0 0 0 3px transparent;
        animation: rolling 5s infinite;
        transition: all 0.3s ease-in-out;

    }
    .rolling-bg-gradient:hover a{
        color: #f5690b;
    }
    .rolling-bg-gradient a{
        color: #f59e0b;
    }
    .rolling-bg-gradient a:hover{
        color: #f5690b;
    }
    .rolling-bg-gradient a:hover svg{
        stroke: #f5690b;
    }
    .rolling-bg-gradient svg{
        stroke: #f59e0b;
        transition: all 0.3s ease-in-out;
    }
    .rolling-bg-gradient svg:hover{
        stroke: #f5690b;
    }
    .rolling-bg-gradient:hover svg{
        stroke: #f5690b;
    }
    .rolling-bg-gradient:hover svg:hover{
        stroke: #f5690b;
    }
  


    .smooth-ring{
        transition: all 0.3s ease-in-out;
        animation: rolling 5s infinite;
    }
