    { title: 'Astro is awesome!', description: 'Astro is awesome!',param: post},

]

const posts = {
  vue: vuePosts,
  react: reactPosts,
  next: nextPosts,
  nuxt: nuxtPosts,
  nest: nestPosts,
  node: nodePosts,
  astro: astroPosts,
}

const filteredPosts = (()=>{
     if (post === 'vue') {
    return vuePosts
} else if (post === 'react') {
    return reactPosts
} else if (post === 'next') {
    return nextPosts
} else if (post === 'nuxt') {
    return nuxtPosts
} else if (post === 'nest') {
    return nestPosts
} else if (post === 'node') {
    return nodePosts
} else if (post === 'astro') {
    return astroPosts
} else {
    return []
}
}) ()







